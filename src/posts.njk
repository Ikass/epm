---
title: Posts
description: Latest POSTS
layout: default
eleventyNavigation:
  key: Posts
  order: 4
pagination:
  data: collections.posts
  size: 2
  alias: posts
---
<!-- Projects section -->
<div class="px-4 pt-16 pb-20 sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">

<!-- Header -->
  <div class="mx-auto max-w-7xl">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">{{ title }}</h2>
      <p class="max-w-2xl mx-auto mt-3 text-xl text-gray-500 sm:mt-4">{{ description }}</p>
    </div>

<!-- Projects Grid -->
    <div class="grid max-w-lg gap-5 mx-auto mt-12 lg:grid-cols-3 lg:max-w-none">

    {% for post in posts | reverse %}
      <div class="flex flex-col overflow-hidden shadow-lg">
        <div class="flex-shrink-0">
          <img class="object-cover w-full h-48"
            src="{{ post.data.image }}"
            alt="{{ post.data.image_alt }}">
        </div>
        <div class="flex flex-col justify-between flex-1 p-6 bg-white">
          <div class="flex-1">
            <div class="flex items-baseline text-sm text-gray-500">
              <a href="{{ post.url }}" class="">
                <span class="text-sky-500 inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-sky-50 "> {{ post.data.category | capitalize }} </span>
              </a>
              <span aria-hidden="true" class="mx-2"> &middot; </span>
              <p>
                <time datetime="2020-03-16">{{ post.data.date | postDate }}</time>
              </p>
            </div>
            <a href="{{ post.url }}" class="block mt-2">
              <p class="text-xl font-semibold text-gray-900">{{ post.data.title }}</p>
              <p class="mt-3 text-base text-gray-500">{{ post.data.description }}</p>
            </a>
          </div>
          <div class="flex items-center mt-6">
            <div class="mt-3">
              <a href="{{ post.url }}" class="text-base font-semibold text-sky-600 hover:text-sky-500">Read full story</a>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
    </div>

    {% include 'partials/pagination.njk' %}

  </div>
</div>