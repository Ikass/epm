---
title: News
description: Latest project news
layout: default
eleventyNavigation:
  key: News
  order: 2
pagination:
  data: collections.news
  size: 20
  alias: posts
---
<!-- News section -->
<div class="px-4 py-12 sm:px-6 lg:py-18 lg:px-8">
  <div class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl">

    <header>
      <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">{{ title }}</h1>
      <div class="mt-3 sm:mt-4 lg:grid lg:grid-cols-2 lg:gap-5 lg:items-center">
        <p class="text-xl text-gray-500">{{ description }}</p>
      </div>
    </header>

    <div class="grid gap-8 py-10 my-6 sm:gap-16 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-12">
      {% for post in posts | sort(reverse='true', attribute='post.data.date') | reverse %}
        <div class="flex flex-col bg-white shadow-lg sm:flex-row">
            <div class="flex-shrink-0">
              <img class="object-cover w-full h-48 sm:h-full sm:w-48"
                src="{{ post.data.image }}"
                alt="{{ post.data.image_alt }}">
            </div>
          <div class="p-6">
            <div class="flex items-baseline">
              <a href="{{ post.url }}" class="">
                <span class="text-sky-500 inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-sky-50 "> {{ post.data.category | capitalize }} </span>
              </a>
              <p class="ml-3 text-sm text-gray-500">
                <time datetime="2020-03-16">{{ post.data.date | postDate }}</time>
              </p>
            </div>
            <a href="{{ post.url }}" class="block mt-2">
              <p class="text-xl font-semibold text-gray-900">{{ post.data.title }}</p>
              <p class="mt-3 text-base text-gray-500">{{ post.data.description }}</p>
            </a>
            <div class="mt-3">
              <a href="{{ post.url }}" class="text-base font-semibold text-sky-600 hover:text-sky-500">Read full story</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% include 'partials/pagination.njk' %}

  </div>
</div>