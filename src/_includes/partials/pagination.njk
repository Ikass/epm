<!-- Pagination -->
<div class="flex items-center justify-between px-4 py-6 sm:px-6">

  <div class="flex justify-center flex-1 sm:items-center">

      <nav class="inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination" aria-labelledby="pagination">
        <ol class="inline-flex">
        <li>{% if pagination.href.previous %}
          <a href="{{ pagination.href.previous }}" class="relative inline-flex items-center px-2 py-2 text-sm font-medium text-gray-500 border border-gray-300 rounded-l-md hover:bg-gray-50"><span class="sr-only">Previous</span>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
          </a>{% else %}{% endif %}
        </li>

        <!-- Current: "z-10 bg-indigo-50 border-indigo-500 text-indigo-600", Default: "bg-white border-gray-300 text-gray-500 hover:bg-gray-50" -->
        {%- for pageEntry in pagination.pages %}
          {% if page.url ==  pagination.hrefs[loop.index0] %} 
            <a href="{{ pagination.hrefs[loop.index0] }}" aria-current="page" class="inline-flex items-center px-4 py-2 text-sm font-medium text-indigo-600 border border-indigo-500  bg-indigo-50">
                {{ loop.index }}
            </a>
          {% else %}
            <a href="{{ pagination.hrefs[loop.index0] }}" class="z-10 inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 hover:bg-gray-50">
                {{ loop.index }}
            </a>
          {% endif %}
        {%- endfor %}

        <li>{% if pagination.href.next %}
          <a href="{{ pagination.href.next }}" class="relative inline-flex items-center px-2 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-r-md hover:bg-gray-50"><span class="sr-only">Next</span>
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /></svg>
          </a>{% else %}{% endif %}
        </li>
        </ol>
      </nav>
  </div>
</div>